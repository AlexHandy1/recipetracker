<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <%if @recipe %>
     <h4 class='recipe-name'><%=@recipe.name%></h4>
      <%=image_tag(@recipe.image, class: "recipe-image center-block")%>
      <p class='recipe-detail'><i>Cooking Time:</i> <b><%=@recipe.cooking_time%></b></p>
        <ul class='recipe-detail'>
        <li><i>Ingredients:</i></li>
         <%@recipe.quantity_of_ingredients.each do |ingredient|%>
            <li><b><%=ingredient%></b></li>
          <%end%>
        </ul>
    <%else%>
      <%=@message %>
    <%end%>
  </div>
</div>